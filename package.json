{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "openclaw-chat",
  "title": "OpenClaw Chat",
  "description": "Chat with your OpenClaw AI assistant directly from Raycast",
  "icon": "icon.png",
  "author": "xiaotiyan",
  "categories": [
    "Productivity",
    "Communication",
    "Developer Tools"
  ],
  "keywords": [
    "ai",
    "chat",
    "openclaw",
    "llm",
    "artificial intelligence",
    "gateway"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "chat",
      "title": "Chat with OpenClaw",
      "description": "Open a chat session with your OpenClaw AI assistant",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "gatewayUrl",
      "title": "Gateway URL",
      "description": "OpenClaw Gateway WebSocket URL (e.g. wss://openclaw.example.com)",
      "type": "textfield",
      "default": "wss://openclaw.example.com",
      "required": true
    },
    {
      "name": "gatewayToken",
      "title": "Gateway Token",
      "description": "Gateway 认证令牌 (从 Control UI Dashboard 的设置中获取，即 gateway.auth.token)",
      "type": "password",
      "required": true
    },
    {
      "name": "sessionMode",
      "title": "Session Mode",
      "description": "Use independent Raycast session or share with other channels",
      "type": "dropdown",
      "data": [
        {
          "title": "Main Session (shared)",
          "value": "shared"
        },
        {
          "title": "Raycast Independent",
          "value": "independent"
        }
      ],
      "default": "shared",
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.93.3",
    "@raycast/utils": "^1.19.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "22.13.4",
    "@types/react": "19.0.8",
    "@types/ws": "^8.5.13",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"Error: no publish\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}