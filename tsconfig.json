{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Raycast Extension",
    "compilerOptions": {
        "lib": [
            "ES2023"
        ],
        "module": "node16",
        "target": "ES2022",
        "moduleResolution": "node16",
        "resolveJsonModule": true,
        "strict": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "outDir": "dist"
    },
    "include": [
        "src/**/*"
    ]
}